<!DOCTYPE html>
<html lang="pt">
  <title>KapiWear - Login</title>
<head>
    <%- include('../partials/head'); %>
</head>
<body>

<header>
    <%- include('../partials/header'); %>
</header>
<br>
<div class="conteudo">
  <div class="conteudointerno">
    <h4>ACCOUNT</h4><BR>
    <div class="formularios">
      <form class="register" id="form-register">
        <div class="mb-3">
          <h5>REGISTER</h5><BR>
          <label for="name2" class="form-label">Nome</label>
          <input type="text" id="name2" name="name2" class="form-control" required />
        </div>
        <div class="mb-3">
          <label for="email2" class="form-label">E-mail</label>
          <input type="email2" id="email2" name="email2" class="form-control" required />
        </div>
        <div class="mb-3">
          <label for="password2" class="form-label">Senha</label>
          <input type="password2" class="form-control" id="password2" name="password2" required />
        </div>
        <div>
          <button id="btn_register" type="button" class="btn btn-secondary">Criar</button>
        </div>
      </form>
  
      <form class="login" id="form-login">
        <div class="mb-3">
          <h5>LOGIN</h5><BR>
          <label for="email" class="form-label">E-mail</label>
          <input type="email" id="email" name="email" class="form-control" aria-describedby="emailHelp" required />
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Senha</label>
          <input type="password" class="form-control" id="password" name="password" required />
        </div>
        <button id="btn_login" type="button" class="btn btn-secondary">Entrar</button>
      </form>
    </div>
  </div>
</div>
<footer>
    <%- include('../partials/footer'); %>
</footer>
<script src="js/loginScript.js"></script>
<script src="js/registerScript.js"></script>